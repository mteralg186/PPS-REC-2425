<%- include('partes/cabecera') %>

<div class="container mt-5">
    <h2 class="text-center mb-5" style="color: #343a40;">Panel del Alumno</h2>

    <div class="row g-5">
        <!-- Unirse a Clase -->
        <div class="col-md-4">
            <div class="card border-primary shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title text-dark">Unirse a una Clase</h5>
                    <p class="card-text text-muted">Crea una nueva clase y asigna temas.</p>
                    <a href="/unirse" class="btn btn-outline-primary rounded-pill px-4 py-2">Unirse</a>
                </div>
            </div>
        </div>

        <!-- Exámenes en Activo -->
        <div class="col-md-4">
            <div class="card border-success shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-file-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title text-dark">Exámenes de Repaso</h5>
                    <p class="card-text text-muted">Generado con T.Respondidas</p>
                    <a href="/examenRespondidas" class="btn btn-outline-success rounded-pill px-4 py-2">Ir a Exámenes</a>
                </div>
            </div>
        </div>

        <!-- Realizar Test Asignados -->
        <div class="col-md-4">
            <div class="card border-warning shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-pencil-alt fa-3x text-warning mb-3"></i>
                    <h5 class="card-title text-dark">Realizar Test Asignados</h5>
                    <p class="card-text text-muted">Realiza exámenes específicos.</p>
                    <a href="/examenes" class="btn btn-outline-warning rounded-pill px-4 py-2">Realizar Examen</a>
                </div>
            </div>
        </div>

        <!-- Consultar Resultados -->
        <div class="col-md-4">
            <div class="card border-info shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                    <h5 class="card-title text-dark">Consultar Mis Resultados</h5>
                    <p class="card-text text-muted">Revisa tu desempeño en los tests.</p>
                    <a href="/resultadoExamen" class="btn btn-outline-info rounded-pill px-4 py-2">Ver Resultados</a>
                </div>
            </div>
        </div>

        <!-- Eliminar Curso -->
        <div class="col-md-4">
            <div class="card border-danger shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-times-circle fa-3x text-danger mb-3"></i>
                    <h5 class="card-title text-dark">Salir de Clase</h5>
                    <p class="card-text text-muted">Salir del curso.</p>
                    <a href="/clasesAsignadasAlumno" class="btn btn-outline-danger rounded-pill px-4 py-2">Eliminar Curso</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partes/footer') %>
