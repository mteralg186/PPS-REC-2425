<%- include('partes/header') %>

<div class="container mt-5">
    <h2 class="text-center mb-5" style="color: #495057;">Panel del Profesor</h2>

    <div class="row g-5">
        <!-- Crear Clase -->
        <div class="col-md-4">
            <div class="card border-primary shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-chalkboard-teacher fa-3x text-primary mb-3"></i>
                    <h5 class="card-title text-dark">Crear Clase</h5>
                    <p class="card-text text-muted">Crea una nueva clase y asigna temas.</p>
                    <a href="/crear-clase" class="btn btn-outline-primary rounded-pill px-4 py-2">Crear Clase</a>
                </div>
            </div>
        </div>

        <!-- Crear Examen -->
        <div class="col-md-4">
            <div class="card border-success shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-file-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title text-dark">Crear Examen</h5>
                    <p class="card-text text-muted">Diseña nuevos exámenes para tus clases.</p>
                    <a href="/crearTest" class="btn btn-outline-success rounded-pill px-4 py-2">Crear Examen</a>
                </div>
            </div>
        </div>

        <!-- Asignar Examen -->
        <div class="col-md-4">
            <div class="card border-warning shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-clipboard-check fa-3x text-warning mb-3"></i>
                    <h5 class="card-title text-dark">Asignar Examen</h5>
                    <p class="card-text text-muted">Asigna exámenes a alumnos específicos o a todos.</p>
                    <a href="/profesor/asignar-examen" class="btn btn-outline-warning rounded-pill px-4 py-2">Asignar Examen</a>
                </div>
            </div>
        </div>

        <!-- Gestionar Alumnos -->
        <div class="col-md-4">
            <div class="card border-info shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-info mb-3"></i>
                    <h5 class="card-title text-dark">Gestionar Alumnos</h5>
                    <p class="card-text text-muted">Añade o elimina alumnos.</p>
                    <a href="/gestionar-alumnos" class="btn btn-outline-info rounded-pill px-4 py-2">Gestionar Alumnos</a>
                </div>
            </div>
        </div>

        <!-- Consultar Resultados -->
        <div class="col-md-4">
            <div class="card border-danger shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x text-danger mb-3"></i>
                    <h5 class="card-title text-dark">Consultar Resultados</h5>
                    <p class="card-text text-muted">Revisa el desempeño de los alumnos en los tests.</p>
                    <a href="/examenesRealizadosProfesor" class="btn btn-outline-danger rounded-pill px-4 py-2">Ver Resultados</a>
                </div>
            </div>
        </div>

        <!-- Editar o Eliminar -->
        <div class="col-md-4">
            <div class="card border-secondary shadow-lg" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <i class="fas fa-cogs fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title text-dark">Editar o Eliminar</h5>
                    <p class="card-text text-muted">Gestiona exámenes o clases existentes.</p>
                    <a href="/profesor/gestion" class="btn btn-outline-secondary rounded-pill px-4 py-2">Gestionar Contenido</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partes/footer') %>
