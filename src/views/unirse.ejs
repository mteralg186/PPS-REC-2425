<%- include('partes/header') %>

<main class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow bg-white bg-opacity-75 border-0 rounded-4">
        <div class="card-body">
          <h2 class="text-center fw-bold">Unirse a una Clase</h2>
          <p class="text-center text-muted">Introduce tu nombre de alumno y el código de la Clase</p>

            <form id="formUnirse class="mt-4" method="POST" action="/unirse">
            <div class="mb-3">
              <label for="codigo" class="form-label fw-bold">Código de la Clase</label>
              <input type="text" id="codigo" name="codigo" class="form-control" required>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-success">Unirse</button>
            </div>
          </form>

          <div id="resultadoUnirse" class="mt-4 text-center fw-bold text-primary" style="display:none;"></div>

          <div id="zonaJuego" style="display:none;">
            <h4 class="mt-4">Alumnos:</h4>
            <ul id="listaJugadores"></ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>



<%- include('partes/footer') %>
